{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULTS$", ".env"],
      "outputs": ["dist/**", ".next/**/*", "!.next/cache/**", "!.vercel/**/*"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "test:config": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["@quartz/next-config#build"],
      "outputs": []
    },
    "dev": {
      "dependsOn": ["@quartz/next-config#build"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false
    },
    "build:list": {
      "outputs": ["list/**"]
    },
    "integration-test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}
