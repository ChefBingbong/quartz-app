{
  "name": "quartz-app",
  "version": "0.1.0",
  "private": true,
  "workspaces": ["apps/*", "packages/*", "apis/*", "scripts"],
  "packageManager": "pnpm@9.12.1",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "turbo run dev --filter=web... --concurrency=4",
    "dev:api": "turbo run dev --filter=server... --concurrency=2",
    "start": "turbo run start --filter=web",
    "build": "turbo run build --filter=web...",
    "build:packages": "turbo run build --filter=./packages/* --filter=./packages/*",
    "build:apis": "turbo run build --filter=./apis/* --filter=./apis/*",
    "lint": "turbo run lint",
    "format:check:staged": "lint-staged",
    "format:check": "biome format .",
    "format:write": "biome format . --write",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tanstack/react-query-devtools": "^5.59.20",
    "ws": "^8.17.1",
    "zod": "^3.22.3"
  },
  "devDependencies": {
    "@quartz/eslint-config": "workspace:*",
    "@quartz/tsconfig": "workspace:*",
    "@stylelint/postcss-css-in-js": "^0.37.2",
    "@biomejs/biome": "^1.8.3",
    "@types/node": "^18.16.2",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.4",
    "stylelint": "^14.5.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "tilg": "^0.1.1",
    "tsx": "^4.6.1",
    "turbo": "2.0.6",
    "typescript": "5.2.2",
    "vitest": "^1.5.0"
  },
  "engines": {
    "node": ">=18.20.0"
  },
  "volta": {
    "node": "20.17.0",
    "pnpm": "9.12.1"
  }
}
